generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model IIIT {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  city      String
  state     String
  latitude  Float?
  longitude Float?
  website   String?
  logoUrl   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model TeamMember {
  id        String         @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  role      String
  bio       String?
  imageUrl  String?
  socials   Json?
  order     Int            @default(0)
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
}

model Sponsor {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  tier      String
  logoUrl   String?
  url       String?
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
